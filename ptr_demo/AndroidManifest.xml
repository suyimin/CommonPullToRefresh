<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xdroid.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ptr.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ptr.ListViewActivity"
            android:label="@string/listView_with_loadmore"/>
        <activity 
            android:name=".ptr.RecyclerViewActivity"
            android:label="@string/recyclerview_with_loadmore"/>
        <activity 
            android:name=".ptr.GridViewAtivity"
            android:label="@string/gridview_with_loadmore"/>
        <activity
            android:name=".ptr.SwipeListViewActivity"
            android:label="@string/swipe_listview_with_loadmore"/>
    </application>

</manifest>
